<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoParalaxOffset="0dp"
    sothree:umanoShadowHeight="0dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_thongTinChung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/normal_padding">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin">

                <TextView
                    android:id="@+id/tv_thongTinChung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chung"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/btn_suaThongTinChung"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@color/colorWhite"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_edit_grey_12"
                    tools:ignore="ContentDescription,UnusedAttribute" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/tv_gioiTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới tính"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Giới tính"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/tv_ngaySinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày sinh"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_range_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Ngày sinh"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_noiSinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nơi sinh"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_building_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Nơi sinh"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_quocTich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quốc tịch"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_building_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Quốc tịch"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_danToc"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/tv_danToc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dân tộc"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_person_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Dân tộc"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp">

                    <TextView
                        android:id="@+id/tv_tonGiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tôn giáo"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_public_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Tôn giáo"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layout_soCMND"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/big_padding">

                    <TextView
                        android:id="@+id/tv_soCMND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số CMND"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_credit_card_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Số CMND"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ngayCapCMND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/big_padding">

                    <TextView
                        android:id="@+id/tv_ngayCapCMND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày cấp CMND"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_range_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:text="Ngày cấp CMND"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_noiCapCMND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nới cấp CMND"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_building_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Nơi cấp CMND"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/panel_general_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.sothree.slidinguppanel.SlidingUpPanelLayout>