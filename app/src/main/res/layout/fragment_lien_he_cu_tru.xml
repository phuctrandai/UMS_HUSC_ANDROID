<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_lienHeCuTru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_thongTinLienHeCuTru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/normal_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin liên hệ, địa chỉ cư trú"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_suaThongTinLienHeCuTru"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_edit_grey_12" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_diDong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_diDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số di động"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone_android_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Di động"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_coDinh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_coDinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số cố định"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_local_phone_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Cố định"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="0dp">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ email"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_email_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Email"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hinhThucCuTru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding">

                <TextView
                    android:id="@+id/tv_hinhThucCuTru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Theo hộ khẩu thường trú"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_home_grey_12dp"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Hình thức cư trú"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ngayBatDauCuTru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding">

                <TextView
                    android:id="@+id/tv_ngayBatDauCuTru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày bắt đầu cư trú"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_date_range_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Ngày bắt đầu cư trú"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_diaChiCuTru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding">

                <TextView
                    android:id="@+id/tv_diaChiCuTru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ thường trú"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_location_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Địa chỉ cư trú tại"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_thongTinQueQuanThuongTru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_thongTinLienHeCuTru"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/normal_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin về quê quán, hộ khẩu thường trú"
                    android:textSize="@dimen/big_text" />

                <Button
                    android:id="@+id/btn_suaQueQuanHoKhau"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_edit_grey_12" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_queQuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding">

                <TextView
                    android:id="@+id/tv_queQuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quê quán"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_home_grey_12dp"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Quê quán"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_hoKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin"
                android:orientation="vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding">

                <TextView
                    android:id="@+id/tv_hoKhauThuongTru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ hộ khẩu"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_location_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:text="Hộ khẩu thường trú"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>