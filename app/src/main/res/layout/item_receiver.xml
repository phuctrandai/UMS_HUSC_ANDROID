<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/surround_item">

    <ImageButton
        android:id="@+id/btn_removeReceiver"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_remove_circle_outline_grey_12"
        android:tint="@android:color/holo_red_light"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_receiverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/btn_removeReceiver"
        android:text="Không xác định "
        android:textColor="@color/colorDarkerGrey"
        android:textSize="@dimen/tiny_text"
        tools:ignore="HardcodedText" />

</RelativeLayout>