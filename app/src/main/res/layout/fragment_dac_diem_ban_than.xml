<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LyLichCaNhan.ResumeActivity"
    android:id="@+id/fragment_dacDiemBanThan">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_dacDiemBanThan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:stretchColumns="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đặc điểm bản thân"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_suaDacDiemBanThan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_edit"
                    />
            </RelativeLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/layout_thanhPhanXuatThan"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="14dp"
                    android:paddingEnd="32dp"
                    android:text="Thành phần xuất thân:" />

                <TextView
                    android:id="@+id/tv_thanhPhanXuatThan"
                    android:text="Khác"
                    android:textColor="@android:color/black" />
            </TableRow>


            <TableRow
                android:id="@+id/layout_dienUuTienGiaDinh"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:paddingEnd="32dp"
                    android:text="Diện ưu tiên gia đình:" />

                <TextView
                    android:id="@+id/tv_dienUuTienGiaDinh"
                    android:text="Không"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_dienUuTienBanThan"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_weight="1"
                    android:paddingStart="14dp"
                    android:paddingEnd="32dp"
                    android:text="Diện ưu tiên bản thân:" />

                <TextView
                    android:id="@+id/tv_dienUuTienBanThan"
                    android:text="Không"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow
                android:id="@+id/layout_tinhTrangHonNhan"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:paddingStart="14dp"
                    android:paddingEnd="32dp"
                    android:text="Tình trạng hôn nhân:" />

                <TextView
                    android:id="@+id/tv_tinhTrangHonNhan"
                    android:text="Độc thân"
                    android:textColor="@android:color/black" />
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:id="@+id/layout_chieuCao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:text="Chiều cao:" />

                    <TextView
                        android:id="@+id/tv_chieuCao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="173 cm"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_nhomMau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="0dp"
                        android:paddingEnd="14dp"
                        android:text="Nhóm máu:" />

                    <TextView
                        android:id="@+id/tv_nhomMau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>