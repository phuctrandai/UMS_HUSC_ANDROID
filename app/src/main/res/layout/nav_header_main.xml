<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/big_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/avt" />

    <TextView
        android:id="@+id/tv_hoTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:text="Trần Đại Phúc"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/extra_text" />

    <TextView
        android:id="@+id/tv_maSinhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:text="Mã sinh viên"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_khoaHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khóa học"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_nganhHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngành học"
        android:textColor="@android:color/white" />

</LinearLayout>
