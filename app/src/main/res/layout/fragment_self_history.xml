                    <TextView
                        android:id="@+id/tv_xepLoaiHanhKiemLop12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/big_margin"
                        android:text="..."
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/extra_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin về việc tham gia Lực lượng vũ trang"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_lucLuongVuTrang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_lucLuongVuTrang"
                    android:drawableStart="@drawable/ic_flag_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Đã từng tham gia LLVT"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_lucLuongVuTrang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_ngayNhapNgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ngayNhapNgu"
                    android:drawableStart="@drawable/ic_date_range_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Ngày nhập ngũ"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_ngayNhapNgu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_ngayXuatNgu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_ngayXuatNgu"
                    android:drawableStart="@drawable/ic_date_range_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Ngày xuất ngũ"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_ngayXuatNgu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_quanHam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_quanHam"
                    android:drawableStart="@drawable/ic_star_half_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Quân hàm cao nhất"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_quanHam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
