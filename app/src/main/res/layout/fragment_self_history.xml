                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/big_margin"
                        android:text="..."
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_xepLoaiHanhKiemLop11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_xepLoaiHanhKiemLop11"
                        android:drawableStart="@drawable/ic_assessment_grey_12"
                        android:drawablePadding="@dimen/small_padding"
                        android:paddingStart="@dimen/big_padding"
                        android:paddingEnd="@dimen/extra_padding"
                        android:text="Xếp loại hạnh kiểm lớp 11"
                        android:textSize="@dimen/small_text"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tv_xepLoaiHanhKiemLop11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/big_margin"
                        android:text="..."
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/normal_text"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_xepLoaiHocTapLop12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginBottom="@dimen/normal_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_xepLoaiHocTapLop12"
                        android:drawableStart="@drawable/ic_assessment_grey_12"
                        android:drawablePadding="@dimen/small_padding"
