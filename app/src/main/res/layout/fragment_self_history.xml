            <RelativeLayout
                android:id="@+id/layout_noiCongTac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_noiCongTac"
                    android:drawableStart="@drawable/ic_home_grey_12dp"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Nơi đóng quân/công tác"
                    android:textSize="@dimen/small_text"
