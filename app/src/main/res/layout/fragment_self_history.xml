<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@+id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoParalaxOffset="0dp"
    sothree:umanoShadowHeight="0dp">

    <ScrollView
        android:id="@+id/fragment_lichSuBanThan"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/normal_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin về Trung học phổ thông"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />

                <ImageButton
                    android:id="@+id/btn_suaLichSuBanThan"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_edit_grey_12"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_namTotNghiepTHPT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_namTotNghiepTHPT"
                    android:drawableStart="@drawable/ic_date_range_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Năm tốt nghiệp THPT"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_namTotNghiepTHPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_loaiTotNghiepTHPT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_loaiTotNghiepTHPT"
                    android:drawableStart="@drawable/ic_assessment_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Loại tốt nghiệp THPT"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_loaiTotNghiepTHPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_noiTotNghiepTHPT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/normal_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_noiTotNghiepTHPT"
                    android:drawableStart="@drawable/ic_building_grey_12"
                    android:drawablePadding="@dimen/small_padding"
                    android:paddingStart="@dimen/big_padding"
                    android:paddingEnd="@dimen/extra_padding"
                    android:text="Nơi tốt nghiệp THPT"
                    android:textSize="@dimen/small_text"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_noiTotNghiepTHPT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/big_margin"
                    android:text="..."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/normal_text"
                    tools:ignore="HardcodedText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout_xepLoaiHocTapLop10"
