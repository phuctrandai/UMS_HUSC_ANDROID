<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_thongTinChung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResumeActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_thongTinChung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:stretchColumns="0">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_thongTinChung"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thông tin chung:"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_suaThongTinChung"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_edit" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/layout_gioiTinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="0dp"
                        android:text="Giới tính " />

                    <TextView
                        android:id="@+id/tv_gioiTinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nam"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="0dp"
                        android:text="Sinh ngày " />

                    <TextView
                        android:id="@+id/tv_ngaySinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15/01/1997"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="14dp"
                    android:text="Nơi sinh tại " />

                <TextView
                    android:id="@+id/tv_noiSinh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thừa Thiên Huế"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:paddingStart="14dp"
                    android:text="Quốc tịch tại " />

                <TextView
                    android:id="@+id/tv_quocTich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Việt Nam"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/layout_danToc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="14dp"
                        android:paddingEnd="0dp"
                        android:text="Dân tộc " />

                    <TextView
                        android:id="@+id/tv_danToc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kinh"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="14dp"
                        android:paddingEnd="0dp"
                        android:text="Tôn giáo " />

                    <TextView
                        android:id="@+id/tv_tonGiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phật"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/layout_soCMND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="0dp"
                        android:text="CMND số " />

                    <TextView
                        android:id="@+id/tv_soCMND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="191905364"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="12dp"
                        android:paddingLeft="14dp"
                        android:paddingEnd="0dp"
                        android:text="Cấp ngày " />

                    <TextView
                        android:id="@+id/tv_ngayCapCMND"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15/04/2014"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:paddingStart="14dp"
                    android:paddingEnd="0dp"
                    android:text="Cấp tại " />

                <TextView
                    android:id="@+id/tv_noiCapCMND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công an TP Huế"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>